name: "polito::keccak"
description: "KECCAK HDL"

filesets:
  files_rtl:
    depend:
    - x-heep::packages
    - pulp-platform.org::common_cells:1.26.0
    files:
    - polito_keccak/keccak/rtl/keccak_globals.vhd
    - polito_keccak/keccak/rtl/keccak_reg_pkg.sv
    - polito_keccak/keccak/rtl/keccak_reg_top.sv
    - polito_keccak/keccak/rtl/keccak_round_constant_gen.vhd
    - polito_keccak/keccak/rtl/keccak_round.vhd
    - polito_keccak/keccak/rtl/keccak_datapath.vhd
    - polito_keccak/keccak/rtl/keccak_cu.sv
    - polito_keccak/keccak/rtl/keccak_top.sv
    file_type: systemVerilogSource
    

  files_behav_rtl:
    files:
    - polito_keccak/keccak/eda/HDL/tech_lib/clkgate/rtl/keccak_clock_gate.sv
    - polito_keccak/keccak//sim/keccak_sram_wrapper.sv
    file_type: systemVerilogSource

  files_verilator_waiver:
    files:
    - polito_keccak/keccak/lint/keccak.vlt
    file_type: vlt

targets:
  default:
    filesets:
    - files_rtl
    - tool_verilator? (files_verilator_waiver)
    - target_sim? (files_behav_rtl)
